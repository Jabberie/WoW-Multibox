{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",    
    "templates":{
        "bl.button":{
            "jsonTemplate":"button"
        }
    },
    "elements": [
        {
            "type": "window",
            "name": "basicLauncher.window",
            "title": "Basic Launcher",
            "content":{
                "type":"stackpanel",
                "orientation":"vertical",
                "backgroundBrush":{
                    "color":"#ff006644"
                },
                "padding":20,
                "children":[
                    {
                        "type":"textblock",
                        "text":"Joe Multiboxer: Basic Launcher",
                        "margin":5,
                        "font":{
                            "bold":true,
                            "face":"Verdana",
                            "heightFactor":1.5
                        }
                    },
                    {
                        "type":"stackpanel",
                        "orientation":"horizontal",
                        "margin":[5,5,5,0],                        
                        "children":[
                            {
                                "type":"textblock",
                                "text":"Game",
                                "verticalAlignment":"center",
                                "horizontalContentAlignment":"right",
                                "width":100,
                                "margin":[0,0,5,0],
                                "font":{
                                    "bold":true
                                }
                            },
                            {
                                "type":"textbox",
                                "textBinding":"BasicLauncher.UseGame",
                                "width":200
                            }
                        ]
                    },
                    {
                        "type":"stackpanel",
                        "orientation":"horizontal",
                        "margin":[5,5,5,0],
                        "children":[
                            {
                                "type":"textblock",
                                "text":"Game Profile",
                                "verticalAlignment":"center",
                                "horizontalContentAlignment":"right",
                                "width":100,
                                "margin":[0,0,5,0],
                                "font":{
                                    "bold":true
                                }
                            },
                            {
                                "type":"textbox",
                                "textBinding":"BasicLauncher.UseGameProfile",
                                "width":200
                            }
                        ]
                    },                                       
                    {
                        "type":"stackpanel",
                        "margin":[5,5,5,0],
                        "orientation":"horizontal",                        
                        "children":[
                            {
                                "type":"textbox",
                                "textBinding":"BasicLauncher.LaunchSlots",
                                "minSize":[30,0],
                                "margin":[0,0,5,0]
                            },
                            { 
                                "type":"button",
                                "jsonTemplate":"bl.button",
                                "_dock":"bottom",
                                "horizontalAlignment":"center",
                                "content":"ðŸš€ Launch",
                                "font":{
                                    "bold":true
                                },
                                "eventHandlers":{
                                    "onPress":{
                                        "type":"method",
                                        "object":"BasicLauncher",
                                        "method":"Launch"
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "type":"button",
                        "jsonTemplate":"bl.button",
                        "content":"Close All",
                        "margin":[5,15,5,0],
                        "eventHandlers":{
                            "onPress":{
                                "type":"method",
                                "object":"BasicLauncher",
                                "method":"CloseAll"
                            }
                        }
                    },
                    {
                        "type":"expander",
                        "margin":5,
                        "header":"More ...",
                        "expanded":false,
                        "content":{
                            "type":"stackpanel",
                            "orientation":"vertical",
                            "children":[                                
                                {
                                    "type":"button",
                                    "jsonTemplate":"bl.button",
                                    "content":"All Fullscreen Windowed",
                                    "margin":[5,5,5,0],
                                    "eventHandlers":{
                                        "onPress":{
                                            "type":"method",
                                            "object":"BasicLauncher",
                                            "method":"AllFullScreen"
                                        }
                                    }
                                },
                                {
                                    "type":"button",
                                    "jsonTemplate":"bl.button",
                                    "content":"Reload Basic Launcher",
                                    "margin":[5,5,5,0],
                                    "eventHandlers":{
                                        "onPress":{
                                            "type":"code",
                                            "code":"JMB.Agent[Basic Launcher]:Stop:Start"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ]
}